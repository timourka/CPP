@page
@using Microsoft.AspNetCore.Authorization
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<section class="page-hero">
    <h1 class="display-5 fw-bold">Добро пожаловать!</h1>
    <p class="lead mt-2">Управляйте рецензиями, отслеживайте уведомления и работайте с курсами в одном месте. Навигация сверху ведёт к основным разделам.</p>
    <div class="hero-actions d-flex flex-wrap align-items-center">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary btn-lg" asp-page="/Admin/Panel">Перейти в админ панель</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" asp-page="/ReviewRequests">Перейти к запросам</a>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a class="btn btn-outline-primary btn-lg" asp-page="/Courses">Курсы</a>
                <a class="btn btn-outline-secondary btn-lg" asp-page="/Notifications">Уведомления</a>
            }
            else
            {
                <a class="btn btn-outline-primary btn-lg" asp-page="/Login">Войти</a>
            }
        }
    </div>
</section>

@if (Model.RecentNotifications.Count > 0)
{
    <div class="section-header">
        <h3 class="mb-0">Последние уведомления</h3>
        <a class="btn btn-sm btn-outline-primary" asp-page="/Notifications">Открыть все</a>
    </div>

    <div class="surface-card">
        <div class="list-group list-group-flush">
            @foreach (var notification in Model.RecentNotifications)
            {
                <div class="list-group-item px-0 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                    <div class="me-md-4">
                        <div class="fw-semibold">@notification.Title</div>
                        <div class="text-muted">@notification.Message</div>
                        @if (notification.Answer != null)
                        {
                            <div class="mt-1">
                                <a asp-page="/Tasks/Review" asp-route-answerId="@notification.Answer.Id" class="link-primary">Перейти к ответу</a>
                            </div>
                        }
                    </div>
                    <div class="text-muted small mt-2 mt-md-0">@notification.CreatedAt.ToLocalTime().ToString("g")</div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="surface-card">
        <p class="mb-0 text-muted">Пока нет уведомлений. Проверьте раздел запросов или курсы, чтобы начать работу.</p>
    </div>
}
