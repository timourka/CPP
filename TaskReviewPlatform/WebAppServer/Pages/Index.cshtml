@page
@using Microsoft.AspNetCore.Authorization
@model IndexModel
<h1>Добро пожаловать!</h1>

<ul>
    @if (User.IsInRole("Admin"))
    {
        <li><a href="/Admin/Panel">Админ панель</a></li>
    }

    <li><a asp-page="/ReviewRequests">Запросы на рецензию</a></li>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li><a asp-page="/Courses">Список курсов</a></li>
        <li><a asp-page="/Notifications">Уведомления</a></li>
        <li><a asp-page="/Answers">Мои ответы</a></li>
    }
</ul>

@if (Model.RecentNotifications.Count > 0)
{
    <h3>Последние уведомления</h3>
    <div class="list-group mb-3">
        @foreach (var notification in Model.RecentNotifications)
        {
            <div class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                <div>
                    <div class="fw-bold">@notification.Title</div>
                    <div>@notification.Message</div>
                    @if (notification.Answer != null)
                    {
                        <div class="mt-1">
                            <a asp-page="/Tasks/Review" asp-route-answerId="@notification.Answer.Id" class="link-primary">Перейти к ответу</a>
                        </div>
                    }
                </div>
                <div class="text-muted small mt-2 mt-md-0">@notification.CreatedAt.ToLocalTime().ToString("g")</div>
            </div>
        }
    </div>
    <a class="btn btn-outline-primary" asp-page="/Notifications">Все уведомления</a>
}
