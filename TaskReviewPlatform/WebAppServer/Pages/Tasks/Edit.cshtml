@page "{id:int}"
@model WebAppServer.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Редактировать задание";
}

<h2>Редактирование задания: @Model.Task.Name</h2>

<form method="post" asp-page-handler="Update">
    <div class="mb-3">
        <label>Название</label>
        <input asp-for="Task.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Описание</label>
        <textarea asp-for="Task.Description" class="form-control"></textarea>
    </div>
    <button class="btn btn-success" type="submit">Сохранить</button>
</form>

<hr />

<h4>Ответы студентов</h4>
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="id" value="@Model.Task.Id" />
            <div class="col-md-4">
                <label asp-for="SearchQuery" class="form-label">Поиск</label>
                <input asp-for="SearchQuery" class="form-control" placeholder="Поиск по описанию или студенту" />
            </div>
            <div class="col-md-3">
                <label asp-for="StudentFilter" class="form-label">Студент</label>
                <select asp-for="StudentFilter" class="form-select">
                    <option value="">Все</option>
                    @foreach (var login in Model.StudentOptions)
                    {
                        <option value="@login">@login</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label asp-for="StatusFilter" class="form-label">Статус</label>
                <select asp-for="StatusFilter" class="form-select">
                    <option value="">Все</option>
                    @foreach (var status in Model.StatusOptions)
                    {
                        <option value="@status">@status</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex flex-md-row flex-column gap-2">
                <button class="btn btn-primary w-100" type="submit">Применить</button>
                <a class="btn btn-outline-secondary w-100" asp-page="/Tasks/Edit" asp-route-id="@Model.Task.Id">Сбросить</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Answers.Count == 0)
{
    <p class="text-muted">Ответов не найдено по заданным условиям.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Студент</th>
                <th>Описание</th>
                <th>Файлы</th>
                <th>Статус</th>
                <th>Оценка</th>
                <th>Ревью</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Answers)
            {
                <tr>
                    <td>@a.Student?.Login</td>
                    <td>@a.Text</td>
                    <td>
                        @if (a.Files?.Count > 0)
                        {
                            <ul class="mb-0">
                                @foreach (var file in a.Files)
                                {
                                    <li><a href="@file.RelativePath" target="_blank">@file.FileName</a></li>
                                }
                            </ul>
                        }
                        else if (!string.IsNullOrEmpty(a.FilePath))
                        {
                            <a href="@a.FilePath" target="_blank">@(string.IsNullOrEmpty(a.FileName) ? "Скачать файл" : a.FileName)</a>
                        }
                        else
                        {
                            <span class="text-muted">Файлы не прикреплены</span>
                        }
                    </td>
                    <td>
                        @a.Status
                        @if (a.ReviewRequested)
                        {
                            <span class="badge bg-info ms-2">Запрошено ревью</span>
                        }
                    </td>
                    <td>@((a.Grade >= 0) ? a.Grade : "-")</td>
                    <td>
                        <div class="mb-2">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Tasks/Review" asp-route-answerId="@a.Id">Открыть ревью</a>
                        </div>
                        <div class="text-muted">
                            Комментариев: @(Model.ReviewCommentsCount.TryGetValue(a.Id, out var count) ? count : 0)
                            <br />Назначить рецензента можно на странице ревью.
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<form method="post" asp-page-handler="Delete" class="mt-3">
    <button class="btn btn-danger" onclick="return confirm('Удалить задание?');">Удалить задание</button>
</form>
