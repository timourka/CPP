@page "{id:int}"
@model WebAppServer.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Редактировать задание";
}

<h2>Редактирование задания: @Model.Task.Name</h2>

<form method="post" asp-page-handler="Update">
    <div class="mb-3">
        <label>Название</label>
        <input asp-for="Task.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Описание</label>
        <textarea asp-for="Task.Description" class="form-control"></textarea>
    </div>
    <button class="btn btn-success" type="submit">Сохранить</button>
</form>

<hr />

<h4>Ответы студентов</h4>
@if (Model.Answers.Count == 0)
{
    <p class="text-muted">Ответов ещё нет.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Студент</th>
                <th>Текст</th>
                <th>Статус</th>
                <th>Оценка</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Answers)
            {
                <tr>
                    <td>@a.Student?.Login</td>
                    <td>@a.Text</td>
                    <td>@a.Status</td>
                    <td>@a.Grade</td>
                    <td>
                        <form method="post" asp-page-handler="CheckAnswer" class="d-inline">
                            <input type="hidden" name="answerId" value="@a.Id" />
                            <button class="btn btn-sm btn-primary">Проверить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<form method="post" asp-page-handler="Delete" class="mt-3">
    <button class="btn btn-danger" onclick="return confirm('Удалить задание?');">Удалить задание</button>
</form>
