@page "{id:int}"
@model WebAppServer.Pages.Tasks.AnswersModel
@{
    ViewData["Title"] = "Ответы на задание: " + Model.Task?.Name;
}

<h2>@Model.Task?.Name</h2>
<p>@Model.Task?.Description</p>

<hr />

<h4>Мои ответы</h4>

@if (Model.UserAnswers.Count == 0)
{
    <p class="text-muted">Вы еще не создали ответ.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Описание</th>
                <th>Файл</th>
                <th>Статус</th>
                <th>Оценка</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.UserAnswers)
            {
                var canModify = a.Status != "Проверено" || a.AllowResubmit;
                <tr>
                    <td>@a.Text</td>
                    <td>
                        @if (!string.IsNullOrEmpty(a.FilePath))
                        {
                            <a href="@a.FilePath" target="_blank">@(string.IsNullOrEmpty(a.FileName) ? "Скачать файл" : a.FileName)</a>
                        }
                        else
                        {
                            <span class="text-muted">Файл не прикреплен</span>
                        }
                    </td>
                    <td>
                        @a.Status
                        @if (a.ReviewRequested)
                        {
                            <span class="badge bg-info ms-2">Запрошено ревью</span>
                        }
                    </td>
                    <td>@((a.Grade >= 0) ? a.Grade : "-")</td>
                    <td>
                        @if (canModify)
                        {
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="answerId" value="@a.Id" />
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Удалить ответ?');">Удалить</button>
                            </form>

                            <form method="post" asp-page-handler="Edit" class="d-inline" enctype="multipart/form-data">
                                <input type="hidden" name="answerId" value="@a.Id" />
                                <input type="text" name="newText" class="form-control d-inline w-auto" placeholder="Новый текст" />
                                <input type="file" name="newFile" class="form-control d-inline w-auto" />
                                <button class="btn btn-sm btn-warning">Редактировать</button>
                            </form>

                            @if (!a.ReviewRequested)
                            {
                                <form method="post" asp-page-handler="RequestReview" class="d-inline ms-1">
                                    <input type="hidden" name="answerId" value="@a.Id" />
                                    <button class="btn btn-sm btn-primary">Запросить ревью</button>
                                </form>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Повторная отправка не разрешена</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h4>Создать новый ответ</h4>
<form method="post" asp-page-handler="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Описание</label>
        <textarea asp-for="NewAnswerText" class="form-control" placeholder="Опишите решение"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Файл</label>
        <input type="file" asp-for="NewAnswerFile" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Создать</button>
</form>
