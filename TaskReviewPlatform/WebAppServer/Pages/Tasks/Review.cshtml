@page "{answerId:int}"
@model WebAppServer.Pages.Tasks.ReviewModel
@{
    ViewData["Title"] = "Ревью ответа";
}

<h2>Ревью ответа студента</h2>

@if (Model.Answer == null)
{
    <div class="alert alert-danger">Ответ не найден.</div>
    return;
}

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Answer.Student?.Login</h5>
        <p class="card-text">@Model.Answer.Text</p>
        <p class="card-text">
            <strong>Файл:</strong>
            @if (!string.IsNullOrEmpty(Model.Answer.FilePath))
            {
                <a href="@Model.Answer.FilePath" target="_blank">@(string.IsNullOrEmpty(Model.Answer.FileName) ? "Скачать файл" : Model.Answer.FileName)</a>
            }
            else
            {
                <span class="text-muted">Файл не прикреплен</span>
            }
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Итоги проверки</h4>
        <form method="post" asp-page-handler="Finalize">
            <div class="mb-3">
                <label class="form-label">Оценка</label>
                <input asp-for="Grade" type="number" class="form-control" min="0" max="100" />
            </div>
            <div class="form-check mb-3">
                <input asp-for="AllowResubmit" class="form-check-input" />
                <label class="form-check-label" for="AllowResubmit">Разрешить повторную отправку</label>
            </div>
            <button type="submit" class="btn btn-success">Сохранить результат</button>
            <a asp-page="/Tasks/Edit" asp-route-id="@Model.Answer.Task?.Id" class="btn btn-secondary ms-2">Назад к ответам</a>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Комментарии к файлам</h4>
        @if (Model.Comments.Count == 0)
        {
            <p class="text-muted">Комментариев пока нет.</p>
        }
        else
        {
            <ul class="list-group mb-3">
                @foreach (var c in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <strong>@(c.LineNumber.HasValue ? $"Строка {c.LineNumber}" : "Общий комментарий")</strong>
                            <small class="text-muted">@c.CreatedAt.ToLocalTime()</small>
                        </div>
                        <div class="text-muted">@c.Reviewer?.Login</div>
                        <div>@c.Text</div>
                    </li>
                }
            </ul>
        }

        <form method="post" asp-page-handler="AddComment">
            <div class="mb-3">
                <label class="form-label">Номер строки (опционально)</label>
                <input asp-for="LineNumber" type="number" class="form-control" min="1" />
            </div>
            <div class="mb-3">
                <label class="form-label">Комментарий</label>
                <textarea asp-for="CommentText" class="form-control" rows="3" placeholder="Оставьте заметку по файлу"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Добавить комментарий</button>
        </form>
    </div>
</div>
