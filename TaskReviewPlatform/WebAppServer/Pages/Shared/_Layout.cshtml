<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppServer.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm rounded-3 px-3 py-2 app-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-page="/Index">TaskReview</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-lg-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Admin/Panel">Админ панель</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ReviewRequests">Запросы на рецензию</a>
                            </li>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Courses">Курсы</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Notifications">Уведомления</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-lg-auto align-items-lg-center gap-lg-2">
                        @if (!(User.Identity?.IsAuthenticated ?? false))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-page="/Login">Войти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted">@User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-primary" asp-page="/Logout">Выйти</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="app-main">
        <div class="container app-container pb-4">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - WebAppServer</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
