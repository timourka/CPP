<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppServer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">WebAppServer</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Главная</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/ReviewRequests">Запросы на рецензию</a>
                        </li>

                        @* Меню для всех авторизованных *@
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Courses">Список курсов</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Notifications">Уведомления</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Answers">Мои ответы</a>
                            </li>
                        }

                        @* Админская ссылка *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Admin/Panel">Админ панель</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">

                        @* Если не вошёл — показ Login *@
                        @if (!(User.Identity?.IsAuthenticated ?? false))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login">Вход</a>
                            </li>
                        }
                        else
                        {
                            @* Имя пользователя *@
                            <li class="nav-item">
                                <span class="nav-link text-dark">Привет, @User.Identity.Name!</span>
                            </li>

                            @* Кнопка выхода *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Logout">Выход</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebAppServer
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
