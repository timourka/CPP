@page
@model LoginModel

<h2>Вход</h2>

<form method="post">
    <div>
        <label>Логин</label>
        <input asp-for="Login" />
    </div>
    <div>
        <label>Пароль</label>
        <input asp-for="Password" type="password" />
    </div>

    <button type="submit">Войти</button>
</form>

<span style="color:red">@Html.ValidationSummary()</span>
